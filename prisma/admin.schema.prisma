generator admin {
  provider = "prisma-client-js"
  output   = "./generated/admin-client"  // Custom output directory for the Prisma Client
}

datasource db {
  provider = "postgresql" 
  url      = env("ADMIN_DATABASE_URL")  // Ensure this is set in your .env file
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String
  role     String
}

model Tenants {
  id          Int    @id @default(autoincrement())
  username    String
  email       String @unique
  companyname String @unique
}
